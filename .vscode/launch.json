{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/Build/Debug/MouthFullOfMarbles.exe",
      "args": ["server", "--port", "8008" ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
