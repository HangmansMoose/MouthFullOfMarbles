    {
      "name": "Client Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/Build/Debug/MouthFullOfMarbles.exe",
      "args": ["client", "127.0.0.1", "--port", "8008" ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}